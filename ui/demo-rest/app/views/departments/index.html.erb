<p id="notice"><%= notice %></p>

<h1>Listing Departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.description %></td>
	<td><%= link_to 'Show', :controller=> "departments", :action => "show", :id => department.id  %></td>
	<td><%= link_to 'Edit', :controller=> "departments", :action => "edit", :id => department.id  %></td>
	<td><%= link_to 'Destroy', {:controller => "departments", :action => "delete", :id => department.id } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path %>
